<htmlform formUuid="c69138ed-a3d7-4fc0-b975-db4e07ae91d9"
	formName="Enregistrement de patient - Birthplace" formDescription="Patient Registration Form for Birthplace Information"
	formEncounterType="873f968a-73a8-4f9c-ac78-9f4778b751b6" formVersion="1.0">

	<ifMode mode="VIEW" include="false">
		<uiInclude provider="registrationapp" javascript="field/personAddressWithHierarchy.js" />

		<script type="text/javascript">

			jq(function() {

			//Set the containers that use the address hierarchy
			// placeOfBirth
			var placeOfBirthAddressWithHierarchy = {
			id: 'placeOfBirth',
			container: jq('#placeOfBirth-container'),
			initialValue: null,
			shortcutFor: 'address1',
			manualFields: ['address2']
			}

			PersonAddressWithHierarchy(placeOfBirthAddressWithHierarchy);

			// remove the first title span that is automatically generated by the HFE
			if ( jq("#birthPlace span.title").length ) {
			jq("#birthPlace span.title").remove();
			}

			// hack to hide the "required" * which take up too much space and don't
			float properly
			jq('#birthPlace .required').hide();

			});
		</script>
	</ifMode>

	<ifMode mode="VIEW" include="false">
		<h2>
			<uimessage code="isanteplus.registration.patient.information.header" />
		</h2>
	</ifMode>

	<div class="hidden">
		<encounterProviderAndRole default="currentUser"
			encounterRole="ef0445e7-bfe6-4260-a351-09fc835b6bcd" required="true" />
		<encounterLocation default="SessionAttribute:emrContext.sessionLocationId" />
	</div>

	<input id="displayEncounterDate" value="true" type="hidden" />

	<section id="demographics" sectionTag="section">

		<fieldset>
			<!-- edit mode of placeOfBirth -->

			  <ifMode mode="VIEW" include="false">
				<div id="placeOfBirth-container">
					<h3>
						<uimessage code="isanteplus.registration.patient.birthplace.label" />
					</h3>
					<div>
						<h3>
							<uimessage
								code="isanteplus.registration.patient.birthplace.address.shortcut" />
						</h3>
						<input type="text" class="address-hierarchy-shortcut" size="60" />
					</div>
					<obsgroup groupingConceptId="CIEL:165194">
						<div>
							<h3>
								<uimessage code="haiticore.address.country" />
							</h3>
							<obs class="level" conceptId="CIEL:165198" id="placeOfBirth-country"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>
						<div>
							<h3>
								<uimessage code="haiticore.address.stateProvince" />
							</h3>
							<obs class="level" conceptId="CIEL:165197" id="placeOfBirth-stateProvince"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>
						<div>
							<h3>
								<uimessage code="haiticore.address.cityVillage" />
							</h3>
							<obs class="level" conceptId="CIEL:1354" id="placeOfBirth-cityVillage"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>
						<!--  <div>
							<h3>
								<uimessage code="haiticore.address.neighborhoodCell" />
							</h3>
							<obs class="level" conceptId="CIEL:165196" id="placeOfBirth-address3"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>
						<div>
							<h3>
								<uimessage code="haiticore.address.address1" />
							</h3>
							<obs class="level" conceptId="CIEL:165195" id="placeOfBirth-address1"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>-->
						<div>
							<h3>
								<uimessage code="haiticore.address.address2" />
							</h3>
							<obs class="level" conceptId="CIEL:162725" id="placeOfBirth-address2"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</div>
					</obsgroup>
				</div>
			</ifMode>

			<!-- view mode of placeOfBirth address -->
		  	<ifMode mode="VIEW" include="true">
				<div>
					<h3>
						<uimessage code="isanteplus.registration.patient.birthplace.label" />
					</h3>
					<obsgroup groupingConceptId="CIEL:165194">
						<p class="left">
							<obs class="level" conceptId="CIEL:162725" id="placeOfBirth-address2"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
							<br />
							<!-- <obs class="level" conceptId="CIEL:165195" id="placeOfBirth-address1"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
							<br />
							<obs class="level" conceptId="CIEL:165196" id="placeOfBirth-address3"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
							,-->
							<obs class="level" conceptId="CIEL:1354" id="placeOfBirth-cityVillage"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
							<br />
							<obs class="level" conceptId="CIEL:165197" id="placeOfBirth-stateProvince"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
							,
							<obs class="level" conceptId="CIEL:165198" id="placeOfBirth-country"
								showUnits="false" unitsCssClass="append-to-value" size="20" />
						</p>
					</obsgroup>
				</div>
			</ifMode>
			</fieldset>
			</section>
	<ifMode mode="VIEW" include="false">
		<div id="buttons">
			<button class="submitButton confirm right" onclick="submitHtmlForm()">
				<uimessage code="emr.save" />
				<i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
			</button>
			<button type="button" class="cancel">
				<uimessage code="emr.cancel" />
			</button>
		</div>
	</ifMode>

</htmlform>